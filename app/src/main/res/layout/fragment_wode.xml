<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_wode"
    android:gravity="top|center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="45dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/heard"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="6dp"
                android:src="@mipmap/heard"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:text="林兰"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:theme="@style/app_fnot_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:theme="@style/app_fnot_style" />

                <TextView
                    android:id="@+id/guanzhu_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="172"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:theme="@style/app_fnot_style" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="粉丝"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:theme="@style/app_fnot_style" />

                <TextView
                    android:id="@+id/fengsi_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="182"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:theme="@style/app_fnot_style" />
            </LinearLayout>

            <TextView
                android:id="@+id/gexing_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="个性签名:...."
                android:textColor="@color/white"
                android:textSize="10sp"
                android:theme="@style/app_fnot_style" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/yuan_btn_info"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:src="@mipmap/kebiao" />
            </LinearLayout>

            <TextView
                android:id="@+id/my_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我的信息"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:theme="@style/app_fnot_style" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/yuan_btn_icurriculum"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:src="@mipmap/kebiao" />
            </LinearLayout>

            <TextView
                android:id="@+id/my_curriculum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我的课表"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:theme="@style/app_fnot_style" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/yuan_btn_money"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:src="@mipmap/lingqianbao" />
            </LinearLayout>

            <TextView
                android:id="@+id/my_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我的钱包"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:theme="@style/app_fnot_style" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/dongtai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="9dp"
                android:src="@mipmap/wodedongtai" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的动态"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:theme="@style/app_fnot_style" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kebiaotixing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="9dp"
                android:src="@mipmap/tixing" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="课表提醒"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:theme="@style/app_fnot_style" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/gonggao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="9dp"
                android:src="@mipmap/post_ic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="公告通知"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:theme="@style/app_fnot_style" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
